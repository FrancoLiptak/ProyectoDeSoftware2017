{% extends 'base.html.twig' %} 

{% block stylesheets %}
<link rel="stylesheet" href="../css/index.css">
{% endblock %}


{% block body %}

<!-- CAROUSEL PORTADA -->
    <div class="container">

        <!-- Slider -->
        <div class="row">
            <div class="col-xs-12" id="slider">
                <!-- Top part of the slider -->
                <div class="row">
                    <div id="carousel-bounding-box">
                        <div class="carousel slide" id="myCarousel2">
                            <!-- Carousel items -->
                            <div class="carousel-inner">
                                <div class="active item" data-slide-number="0">
                                <img src="images/portada1.jpg" alt="Portada1"></div>

                                <div class="item" data-slide-number="1">
                                <img src="images/portada2.jpg" alt="Portada2"></div>

                                <div class="item" data-slide-number="2">
                                <img src="images/portada3.jpg" alt="Portada3"></div>

                                <div class="item" data-slide-number="3">
                                <img src="images/portada4.jpg" alt="Portada4"></div>

                                <div class="item" data-slide-number="4">
                                <img src="images/portada5.jpg" alt="Portada5"></div>

                            </div><!-- Carousel nav -->
                            <a class="left carousel-control" href="#myCarousel2" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>                                       
                            </a>
                            <a class="right carousel-control" href="#myCarousel2" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>                                       
                            </a>                                
                        </div>
                    </div> 
                </div>
            </div>
        </div><!--/Slider-->
    </div>


<!-- FIN CAROUSEL PORTADA -->

    <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 information-boxes">
                    <div class="box">
                        <div class="box-icon">
                            <span class="fa fa-4x">H</span>
                        </div>
                        <div class="info">
                            <h4 class="text-center">El Hospital</h4>
                            <p>
                                {%- for config in configuration -%}
                                    {%- if (config.nombre == 'description') -%}
                                        {{- config.valor -}}
                                    {%- endif -%}
                                {%- endfor -%}
                            </p>
                            <a href="" class="btn">Más sobre Hospital</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 information-boxes">
                    <div class="box">
                        <div class="box-icon">
                            <span class="fa fa-4x">G</span>
                        </div>
                        <div class="info">
                            <h4 class="text-center">Guardia</h4>
                            <p>
                                Hospital Dr. Ricardo Gutierrez de La Plata dispone de un sofisticado servicio de guardias médicas las 12 horas para la atención de distintas urgencias.
                                La administración de la institución hace viable una eficiente separación de los pacientes según el nivel de seriedad y el tipo de patología.
                            </p>
                            <a href="" class="btn">Más sobre la Guardia</a>
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 information-boxes">
                        <div class="box">
                            <div class="box-icon">
                                <span class="fa fa-4x">E</span>
                            </div>
                            <div class="info">
                                <h4 class="text-center">Especialidades</h4>
                                <p>
                                    Acorde a una respetable trayectoria en materia de medicina y salud, en Hospital Dr. Ricardo Gutierrez de La Plata podemos encontrar profesionales de las principales especialidades de salud.
                                    Del mismo modo, se brinda atencion programada y de urgencias, se realizan estudios médicos y se brinda soporte en muchas de las ramas comunes de la medicina moderna.
                                </p>
                                <a href="" class="btn">Más sobre Especialidades</a>
                            </div>
                        </div>
                    </div>
            </div>
        </div>

{% endblock %}

{% block footer %}
    {% include 'footer_index.html.twig' %}
{% endblock %}

{% block javascripts %}
<script src="../js/primerSlider.js"></script>
{% endblock %}