{% extends 'base.html.twig' %} 

{% block stylesheets %}
<link rel="stylesheet" href="../css/form.css">
{% endblock %}

{% block body %}
<div class="container login-container">
    {% include 'errorMessage.html.twig' %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-form">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <a href="#" class="active" id="login-form-link">Login</a>
                        </div>
                    </div>
                <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="login-form"  action="?controlador=session&accion=checkLogin" method="post" style="display: block;">
                                <div class="form-group">
                                    <input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Nombre de usuario" value="" pattern="^[a-zA-Z][a-zA-Z0-9-_\.]{1,20}$" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Contraseña" required>
                                </div>
                                <!-- not implemented yet
                                <div class="form-group text-center">
                                    <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                                    <label for="remember"> Remember Me</label>
                                </div>
                                -->
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-form" value="Ingresar">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="text-center">
                                                <a href="?controlador=SessionController&action=recoverPassword" tabindex="5" class="forgot-password">Olvido la contraseña?</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block footer %}
    {% include 'footer_index.html.twig' %}
{% endblock %}